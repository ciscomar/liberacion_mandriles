<div class="col-md-6 col-lg-10-2">
    <!-- general form elements -->
    <div class="box box-primary">
        <div class="box-header with-border">
            <br>
            <h3 class="box-title">Notificaciones</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form action="/guardar_notificar" method="POST">
            <div class="box-body">

                <div class="form-group">
                    <label for="Titulo">Correo:</label>
                    <select class="form-control" name="correo" id="correo">

                        <% for (var i = 0; i < data.length; i++) { %>
                        <% if (data[i].emp_correo != 'NULL') { %>
                        <option><%= data[i].emp_correo %></option>
                        <% } %>
                        <% } %>
                    </select>
                </div>

                <div class="row">

                    <div class="col-lg-3">
                        <div class="custom-control custom-switch mb-3">
                            <input type="checkbox" class="custom-control-input" name="dep1" id="dep1" value="1">
                            <label class="custom-control-label" for="dep1">Lanzamientos</label>
                        </div>

                        <div class="custom-control custom-switch mb-3">
                            <input type="checkbox" class="custom-control-input" name="dep2" id="dep2" value="1">
                            <label class="custom-control-label" for="dep2">Tooling</label>
                        </div>
                        <div class="custom-control custom-switch mb-3">
                            <input type="checkbox" class="custom-control-input" name="dep3" id="dep3" value="1">
                            <label class="custom-control-label" for="dep3">Procesos</label>
                        </div>
                        <div class="custom-control custom-switch mb-3">
                            <input type="checkbox" class="custom-control-input" name="dep4" id="dep4" value="1">
                            <label class="custom-control-label" for="dep4">Procesos Extrusion</label>
                        </div>
                    </div>



                    <div class="col-lg-3">
                        <div class="custom-control custom-switch mb-3">
                            <input type="checkbox" class="custom-control-input" name="dep5" id="dep5" value="1">
                            <label class="custom-control-label" for="dep5">Calidad</label>
                        </div>
                        <div class="custom-control custom-switch mb-3">
                            <input type="checkbox" class="custom-control-input" name="dep6" id="dep6" value="1">
                            <label class="custom-control-label" for="dep6">Calidad Ensamble</label>
                        </div>
                        <div class="custom-control custom-switch mb-3">
                            <input type="checkbox" class="custom-control-input" name="dep7" id="dep7" value="1">
                            <label class="custom-control-label" for="dep7">Produccion</label>
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
        </form>
    </div>
</div>
</div>
